<!DOCTYPE html>
<html lang="en">
  <%- include('../layouts/head')%>
  <body>
    <%- include('../layouts/navigation')%>
    <main class="centered">
      <h1><%= product.title %></h1>
      <hr />
      <div class="image">
        <img src="/<%= product.imageUrl %>" alt="<%= product.title %>" />
      </div>
      <h2>$<%= product.price %></h2>
      <p><%= product.description %></p>
      <% if (isAuthenticated) { %> <%- include('../layouts/add-to-cart.ejs',
      {product: product}) %> <% } %>
    </main>
    <%- include('../layouts/footer')%>
  </body>
</html>
